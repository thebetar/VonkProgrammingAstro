---
import { info } from '@data';

import Layout from '@layouts/Layout.astro';
import Hero from '@components/home/Hero.astro';
import MetaHead from '@components/general/MetaHead.astro';
import AllExperience from '@components/experience/AllExperience.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<MetaHead
			title={'VonkProgramming'}
			description={info.description}
			keywords={info.keywords}
			author={info.name}
			ogImageUrl={'/assets/images/logo.webp'}
		/>
	</head>

	<body>
		<Layout>
			<Hero name={info.name} jobDescription1={info.jobDescription1} jobDescription2={info.jobDescription2} />

			<AllExperience title="Education" details={info.education} />
		</Layout>
	</body>
</html>
