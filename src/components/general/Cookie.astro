<div
	id="cookie-component"
	class="w-screen h-screen px-4 fixed top-0 left-0 bg-slate-800 bg-opacity-80 justify-center items-center hidden"
>
	<div class="bg-white bg-opacity-95 backdrop-blur md:w-[400px] w-full px-12 py-6 text-center">
		<img src="/assets/svg/cookie.svg" alt="logo" class="md:h-12 h-10 mx-auto" />
		<div class="font-semibold text-xl mt-4">Cookie statement</div>
		<div class="text-sm mt-2">On this website we use cookies to track the amount of visitors on this website.</div>
		<div class="flex gap-x-2 justify-center">
			<button
				id="cookie-accept"
				class="px-6 py-2 rounded-sm bg-slate-800 hover:bg-slate-600 transition text-white mt-4"
			>
				Accept
			</button>
			<button
				id="cookie-decline"
				class="px-6 py-2 rounded-sm border-slate-800 hover:border-slate-600 border hover:bg-slate-600 transition text-slate-800 hover:text-white mt-4"
			>
				Decline
			</button>
			{localStorage.getItem('cookie-accept')}
		</div>
	</div>
</div>

<script is:inline>
	const acceptButton = document.getElementById('cookie-accept');

	acceptButton.addEventListener('click', () => {
		localStorage.setItem('cookie-accept', 'accept');
		location.reload();
	});

	const declineButton = document.getElementById('cookie-decline');

	declineButton.addEventListener('click', () => {
		localStorage.setItem('cookie-accept', 'decline');
		location.reload();
	});
</script>
