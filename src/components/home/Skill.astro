---
import type { ISkills } from '@types';

const { title, details } = Astro.props as ISkills;
---

<section class="flex items-start justify-between flex-col sm:flex-row dark:text-light">
	<h2 class="w-[15rem] mt-16">{title}</h2>
	<div class="w-full md:mt-12 mt-6 grid md:grid-cols-3 grid-cols-2 md:gap-x-8 gap-x-4">
		{
			details.map(item => (
				<a
					href={item.link}
					class="md:my-4 my-3 flex justify-between items-center border-slate-300 border md:p-4 p-2 dark:text-light text-black no-underline rounded"
				>
					<div class="flex gap-2 items-center">
						<div class="md:w-10 md:h-10 w-8 h-8 rounded-full bg-slate-300 dark:bg-slate-100 flex justify-center items-center">
							<img src={item.logo} class="md:w-6 md:h-6 w-4 h-4" />
						</div>
						<h3 class="md:text-lg text-sm">{item.title}</h3>
					</div>
					<p class="md:text-sm text-xs dark:text-gray">{item.years} years</p>
				</a>
			))
		}
	</div>
</section>
