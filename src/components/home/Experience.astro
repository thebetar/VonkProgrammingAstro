---
import { IExperiences } from '@types';

const { title, details } = Astro.props as IExperiences;
---

<section class="flex items-start justify-between flex-col sm:flex-row dark:text-light">
	<h2 class="w-[15rem] mt-16">{title}</h2>
	<div class="w-full">
		{
			details.map(item => (
				<div class="md:my-16 my-8">
					<div class="flex justify-between items-center flex-wrap">
						<h3 class="text-xl font-semibold">{item.name}</h3>
						<p class="text-sm dark:text-gray">
							{item.startDate} - {item.endDate}
						</p>
					</div>
					<p class="text-sm mt-3 dark:text-blue text-cyan-800">{item.location}</p>
					<ul class="mt-3">
						{item.description.map(item => (
							<li class="dark:text-gray">{item}</li>
						))}
					</ul>
					{item.link ? (
						<a
							href={item.link}
							class="text-sm underline dark:text-gray mt-4"
							target="_blank"
							rel="noopener noreferrer"
						>
							Go to website
						</a>
					) : null}
				</div>
			))
		}
		<div class="text-white lg:col-span-3 col-span-2 text-center mt-4 md:text-base text-sm">
			To see more of my {title.toLowerCase()}
			<a class="text-white underline hover:opacity-70 transition-opacity" href={`/${title.toLowerCase()}`}>
				click here</a
			>
		</div>
	</div>
</section>
